<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/bg_white_color"
      android:paddingLeft="15dp"
      android:paddingTop="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/want_way"
        android:textSize="16sp"
        android:textColor="@color/title_black_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        >
      <FrameLayout
          android:id="@+id/layoutWxPay"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_solid_3_ff"
            >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/m_ic_weixin_pay"
              android:layout_gravity="center"
              />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layoutWxSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_stroke_3_yellow"
            android:visibility="visible"
            >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/m_xuanzhong"
              android:layout_gravity="right|bottom"
              />
        </FrameLayout>
      </FrameLayout>
      <FrameLayout
          android:id="@+id/layoutZfbPay"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:layout_marginLeft="15dp"
          >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_solid_3_ff"
            >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/m_zhifubao_pay"
              android:layout_gravity="center"
              />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layoutZfbSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_stroke_3_yellow"
            android:visibility="gone"
            >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/m_xuanzhong"
              android:layout_gravity="right|bottom"
              />
        </FrameLayout>
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="10dp"
      android:background="@color/bg_white_color"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:paddingTop="30dp"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="提现金额（元）："
          android:textColor="@color/title_black_color"
          android:textSize="13sp"
          android:layout_centerVertical="true"
          />
      <EditText
          android:id="@+id/etMoney"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:background="@null"
          android:minWidth="100dp"
          android:textColor="@color/text_ff3333_color"
          android:gravity="right"
          android:textSize="18sp"
          android:hint="0"
          android:textColorHint="@color/text_ff3333_color"
          />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:id="@+id/tvLeaveMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前零钱余额1008.98元,"
            android:textSize="12sp"
            android:textColor="@color/text_3_4d_color"
            />
      <TextView
          android:id="@+id/tvWantAll"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/want_all_money"
          android:textColor="@color/text_33abff_color"
          android:textSize="12sp"
          android:layout_marginLeft="5dp"
          android:gravity="center"
          />
    </LinearLayout>
  </LinearLayout>
  <Button
      android:id="@+id/btnWantCurrent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:text="@string/want_current"
      android:background="@drawable/btn_yellow_bg_selector_5dp"
      android:textColor="@color/btn_yellow_textcolor_selector"
      android:enabled="true"
      android:layout_marginTop="30dp"
      />
  <TextView
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="当天24点前到账"
      android:textColor="@color/text_3_b3_color"
      android:textSize="11sp"
      android:layout_gravity="center_horizontal"
      />
</LinearLayout>