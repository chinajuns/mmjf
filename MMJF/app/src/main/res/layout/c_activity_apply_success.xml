<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/grey_bg_color"
      >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white_color"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"
          android:layout_marginBottom="30dp"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c_ic_apply_success"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/apply_information_success"
            android:textSize="16sp"
            android:textColor="@color/title_black_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/receive_customer_apply"
            android:textSize="13sp"
            android:textColor="#b3b3b3"
            />
        <TextView
            android:id="@+id/tvManagerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="请注意接听来自1583721893的电话"
            android:textSize="13sp"
            android:textColor="#b3b3b3"
            />
      </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="根据您的需求，为您匹配了优质信贷经理"
        android:textSize="11sp"
        android:textColor="#4d4d4d"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white_color"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="50dp"
        >

    </android.support.v7.widget.RecyclerView>
  </LinearLayout>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="5dp"
      android:layout_gravity="bottom"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/btnComplete"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:background="@color/bg_white_color"
          android:text="@string/complete"
          />
      <Button
          android:id="@+id/btnApply"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:background="@color/theme_color"
          android:text="@string/apply_current"
          />
    </LinearLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>