<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg_color"
        android:orientation="vertical"
        >
      <!--第一部分-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/bg_white_color"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          >
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_product_label"
            android:text="房屋贷款"
            android:textColor="@color/bg_white_color"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="11sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="19dp"
            >
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="额度"
                android:textColor="#b3b3b3"
                />
            <TextView
                android:id="@+id/tvLoanNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_black_color"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                />
          </LinearLayout>
          <View
              android:layout_width="1dp"
              android:layout_height="30dp"
              android:background="@color/line_color"
              />
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="期限"
                android:textColor="#b3b3b3"
                />
            <TextView
                android:id="@+id/tvTimeLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_black_color"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                />
          </LinearLayout>
          <View
              android:layout_width="1dp"
              android:layout_height="30dp"
              android:background="@color/line_color"
              />
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="月利率"
                android:textColor="#b3b3b3"
                />
            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_black_color"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                />
          </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="代理时间："
              android:textSize="12sp"
              android:textColor="#4d4d4d"
              />
          <TextView
              android:id="@+id/tvAgentTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="#4d4d4d"
              android:layout_marginLeft="5dp"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="申请客户："
              android:textSize="12sp"
              android:textColor="#4d4d4d"
              />
          <TextView
              android:id="@+id/tvApplyNumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="#ff3333"
              android:layout_marginLeft="5dp"
              />
        </LinearLayout>
      </LinearLayout>
      <!--第二部分-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/bg_white_color"
          android:layout_marginTop="10dp"
          android:padding="15dp"
          android:layout_marginBottom="100dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请条件"
            android:drawableLeft="@drawable/ic_apply_condition"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:textColor="@color/title_black_color"
            />
        <LinearLayout
            android:id="@+id/layoutApplyOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            >
          <!--<LinearLayout-->
          <!--android:layout_width="match_parent"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:orientation="horizontal"-->
          <!--&gt;-->
          <!--<TextView-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:text="年龄要求:"-->
          <!--android:textSize="12sp"-->
          <!--android:textColor="#4d4d4d"-->
          <!--/>-->
          <!--<TextView-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:text="22&#45;&#45;59周岁；"-->
          <!--android:textSize="12sp"-->
          <!--android:textColor="#4d4d4d"-->
          <!--android:layout_marginLeft="5dp"-->
          <!--/>-->
          <!--</LinearLayout>-->
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所需材料"
            android:drawableLeft="@drawable/ic_need_material"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:textColor="@color/title_black_color"
            />
        <LinearLayout
            android:id="@+id/layoutNeedInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            >
          <!--<TextView-->
              <!--android:layout_width="wrap_content"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:text="1.二代身份证；"-->
              <!--android:textSize="12sp"-->
              <!--android:textColor="#4d4d4d"-->
              <!--/>-->
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
  <!--第三部分-->
  <Button
      android:id="@+id/btnLoan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/theme_color"
      android:text="我要贷款"
      android:textSize="16sp"
      android:textColor="@color/btn_yellow_textcolor_selector"
      android:layout_gravity="bottom"
      android:textStyle="normal"
      />
</FrameLayout>