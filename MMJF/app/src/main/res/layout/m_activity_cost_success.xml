<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:background="@color/bg_white_color"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cost_success"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                android:drawableTop="@drawable/c_ic_apply_success"
                android:drawablePadding="10dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="@string/cost_success_count"
                android:textColor="@color/text_3_b3_color"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>