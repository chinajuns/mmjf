<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/grey_bg_color"
      >
    <!--顶部-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        >
      <!--甩单成功、失败-->
      <LinearLayout
          android:id="@+id/layoutThrowResult"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/bg_white_color"
          android:padding="15dp"
          android:visibility="visible"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
          <TextView
              android:id="@+id/tvSendTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_3_4d_color"
              android:textSize="11sp"
              android:layout_alignParentRight="true"
              />
          <TextView
              android:id="@+id/tvThrowTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_3_4d_color"
              android:textSize="11sp"
              />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_3_4d_color"
              android:textSize="11sp"
              android:text="订单状态: "
              />
          <TextView
              android:id="@+id/tvOrderState"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_3_4d_color"
              android:textSize="11sp"
              />
        </LinearLayout>
      </LinearLayout>
      <!--倒计时-->
      <LinearLayout
          android:id="@+id/layoutCountDown"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/bg_white_layer"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:layout_marginRight="15dp"
          android:gravity="center_horizontal"
          android:visibility="gone"
          >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            >
          <View
              android:layout_width="50dp"
              android:layout_height="1dp"
              android:background="@color/title_black_color"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="距离甩单结束时间还有"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:textSize="13sp"
              android:textColor="@color/title_black_color"
              />
          <View
              android:layout_width="50dp"
              android:layout_height="1dp"
              android:background="@color/title_black_color"
              />
        </LinearLayout>
        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/countDownView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            app:isHideTimeBackground="false"
            app:isShowDay="false"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isShowMillisecond="false"
            app:timeTextColor="@color/bg_white_color"
            app:timeTextSize="20sp"
            app:isTimeTextBold="true"
            app:suffixGravity="bottom"
            app:suffixTextColor="@color/title_black_color"
            app:suffixTextSize="12sp"
            app:suffixHour="时"
            app:suffixMinute="分"
            app:suffixSecond="秒"
            app:timeBgColor="@color/theme_color"
            app:timeBgSize="70dp"
            app:timeBgRadius="3dp"
            />
      </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg_color"
        android:orientation="vertical"
        >
      <!--1-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/bg_white_color"
          android:layout_marginTop="10dp"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >
          <TextView
              android:id="@+id/tvCusName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/title_black_color"
              android:layout_toRightOf="@id/layoutScoreLabel"
              android:layout_marginLeft="15dp"
              />
          <TextView
              android:id="@+id/tvDateAndAddress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_3_cc_color"
              android:textSize="11sp"
              android:layout_toRightOf="@id/tvCusName"
              android:layout_alignBottom="@id/tvCusName"
              android:layout_marginLeft="10dp"
              />
          <ImageView
              android:id="@+id/ivVip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginRight="15dp"
              />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            >
          <FrameLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >
              <TextView
                  android:id="@+id/tvLoanNumber"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:textColor="@color/title_black_color"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="贷款金额（元）"
                  android:textColor="@color/text_3_b3_color"
                  android:layout_marginTop="10dp"
                  android:textSize="11sp"
                  />
            </LinearLayout>
          </FrameLayout>
          <View
              android:layout_width="1dp"
              android:layout_height="30dp"
              android:background="@color/line_color"
              />
          <FrameLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >
              <TextView
                  android:id="@+id/tvLoanType"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:textColor="@color/title_black_color"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="贷款类型"
                  android:textColor="@color/text_3_b3_color"
                  android:layout_marginTop="10dp"
                  android:textSize="11sp"
                  />
            </LinearLayout>
          </FrameLayout>
          <View
              android:layout_width="1dp"
              android:layout_height="30dp"
              android:background="@color/line_color"
              />
          <FrameLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >
              <TextView
                  android:id="@+id/tvLoanLimit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:textColor="@color/title_black_color"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="贷款期限（月）"
                  android:textColor="@color/text_3_b3_color"
                  android:layout_marginTop="10dp"
                  android:textSize="11sp"
                  />
            </LinearLayout>
          </FrameLayout>
        </LinearLayout>
      </LinearLayout>
      <!--基本信息-->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="15dp"
          android:text="基本信息:"
          android:textSize="13sp"
          android:textColor="@color/text_3_b3_color"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/bg_white_color"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="年龄"
              android:textColor="@color/title_black_color"
              android:textSize="13sp"
              />
          <TextView
              android:id="@+id/tvAge"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_3_4d_color"
              android:textSize="13sp"
              android:layout_alignParentRight="true"
              />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="手机号码"
              android:textColor="@color/title_black_color"
              android:textSize="13sp"
              />
          <TextView
              android:id="@+id/tvPhone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_33abff_color"
              android:textSize="13sp"
              android:layout_alignParentRight="true"
              />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="婚姻状况"
              android:textColor="@color/title_black_color"
              android:textSize="13sp"
              />
          <TextView
              android:id="@+id/tvIsMarry"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_3_4d_color"
              android:textSize="13sp"
              android:layout_alignParentRight="true"
              />
        </RelativeLayout>
      </LinearLayout>
      <!--工作信息:-->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="15dp"
          android:text="工作信息:"
          android:textSize="13sp"
          android:textColor="@color/text_3_b3_color"
          />
      <LinearLayout
          android:id="@+id/layoutWorkInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/bg_white_color"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          >
      </LinearLayout>
      <!--资产信用信息:-->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="15dp"
          android:text="资产信用信息:"
          android:textSize="13sp"
          android:textColor="@color/text_3_b3_color"
          />
      <LinearLayout
          android:id="@+id/layoutAssetInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/bg_white_color"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          >
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="15dp"
          android:paddingBottom="15dp"
          android:orientation="horizontal"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息简述:"
            android:textColor="@color/title_black_color"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_3_4d_color"
            android:textSize="13sp"
            />
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/line_color"
          />
    </LinearLayout>
  </LinearLayout>
</ScrollView>