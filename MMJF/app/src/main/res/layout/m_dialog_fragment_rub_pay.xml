<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_layer"

    >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="支付"
      android:gravity="center"
      android:textSize="13sp"
      android:textColor="@color/title_black_color"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      />
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          android:layout_marginTop="30dp"
          android:layout_marginBottom="30dp"
          >
          <TextView
              android:id="@+id/tvScore"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:textColor="@color/text_ff3333_color"
              android:text="100"
              />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_3_b3_color"
            android:text="积分（分）"
            android:layout_marginTop="5dp"
            />
      </LinearLayout>
  </FrameLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/cancel"
        android:background="@color/bg_white_color"
        android:textColor="@color/title_black_color"
        android:textSize="13sp"
        />
    <Button
        android:id="@+id/btnPay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/pay_confirm"
        android:background="@color/theme_color"
        android:textColor="@color/title_black_color"
        android:textSize="13sp"
        />
  </LinearLayout>
</LinearLayout>