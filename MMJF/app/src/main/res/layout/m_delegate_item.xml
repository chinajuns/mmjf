<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_white_layer"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_product_label"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvLoanType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/bg_white_color"
            android:text="房屋贷款"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="20dp"
      android:paddingBottom="20dp"
      >
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="额度"
            android:textColor="@color/text_3_b3_color"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tvLoanNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-1000万元"
            android:textSize="13sp"
            android:textColor="@color/title_black_color"
            android:layout_marginTop="10dp"
            />
      </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/line_color"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期限"
            android:textColor="@color/text_3_b3_color"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tvLoanLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-36个月"
            android:textSize="13sp"
            android:textColor="@color/title_black_color"
            android:layout_marginTop="10dp"
            />
      </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/line_color"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月利率"
            android:textColor="@color/text_3_b3_color"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tvLoanRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-3%"
            android:textSize="13sp"
            android:textColor="@color/title_black_color"
            android:layout_marginTop="10dp"
            />
      </LinearLayout>
    </FrameLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      />
  <RelativeLayout
      android:layout_marginTop="30dp"
      android:layout_marginBottom="30dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:id="@+id/tvApplyPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已代理：500人"
        android:textSize="13sp"
        android:textColor="@color/text_3_4d_color"
        />
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间：2017919239"
        android:textSize="13sp"
        android:textColor="@color/text_3_4d_color"
        android:layout_alignParentRight="true"
        />
  </RelativeLayout>
  <Button
      android:id="@+id/btnOperator"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/theme_color"
      android:text="@string/i_want_delegate"
      android:textSize="16sp"
      android:textColor="@color/title_black_color"
      />
</LinearLayout>