<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <FrameLayout
      android:id="@+id/layoutEmpty"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:visibility="gone"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_record"
        android:drawableTop="@drawable/ic_record_empty"
        android:gravity="center"
        android:drawablePadding="15dp"
        />
  </FrameLayout>
  <!--内容item-->
  <LinearLayout
      android:id="@+id/layoutContent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/bg_white_layer"
      >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_product_label"
        android:layout_marginTop="10dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="11sp"
          android:textColor="@color/bg_white_color"
          android:text="房屋贷款"
          android:layout_gravity="center"
          />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="额度"
              android:textColor="@color/text_3_b3_color"
              android:layout_marginTop="10dp"
              android:textSize="11sp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="3-1000万元"
              android:textSize="13sp"
              android:textColor="@color/title_black_color"
              android:layout_marginTop="10dp"
              />
        </LinearLayout>
      </FrameLayout>
      <View
          android:layout_width="1dp"
          android:layout_height="30dp"
          android:background="@color/line_color"
          />
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="期限"
              android:textColor="@color/text_3_b3_color"
              android:layout_marginTop="10dp"
              android:textSize="11sp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1-36个月"
              android:textSize="13sp"
              android:textColor="@color/title_black_color"
              android:layout_marginTop="10dp"
              />
        </LinearLayout>
      </FrameLayout>
      <View
          android:layout_width="1dp"
          android:layout_height="30dp"
          android:background="@color/line_color"
          />
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="月利率"
              android:textColor="@color/text_3_b3_color"
              android:layout_marginTop="10dp"
              android:textSize="11sp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2-3%"
              android:textSize="13sp"
              android:textColor="@color/title_black_color"
              android:layout_marginTop="10dp"
              />
        </LinearLayout>
      </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申请客户：500人"
          android:textSize="13sp"
          android:textColor="@color/text_3_4d_color"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申请客户：500人"
          android:textSize="13sp"
          android:textColor="@color/text_3_4d_color"
          android:layout_alignParentRight="true"
          />
    </RelativeLayout>
  </LinearLayout>
</FrameLayout>