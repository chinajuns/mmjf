<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/grey_bg_color"
          android:orientation="vertical"
          android:paddingBottom="70dp"
          >
        <!--基本信息-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="个人信息:"
            android:textSize="13sp"
            android:textColor="@color/text_3_b3_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white_color"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/belong_city"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
        </LinearLayout>
        <!--身份证-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="身份证:"
            android:textSize="13sp"
            android:textColor="@color/text_3_b3_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white_color"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              android:orientation="horizontal"
              >
            <ImageView
                android:id="@+id/ivFront"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/banner1"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/banner2"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
  </FrameLayout>
  <FrameLayout
      android:id="@+id/layoutMask"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/mask_color"
      android:visibility="gone"
      android:clickable="true"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        >
      <ImageView
          android:id="@+id/imgAuditState"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <TextView
          android:id="@+id/tvAuditDesc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/verifying"
          android:textColor="@color/bg_white_color"
          android:layout_marginTop="20dp"
          android:textSize="16sp"
          />
      <Button
          android:id="@+id/btnAuditAgain"
          android:layout_width="300dp"
          android:layout_height="40dp"
          android:background="@drawable/btn_yellow_enabled_shape_5dp"
          android:text="重新审核"
          android:layout_marginTop="20dp"
          android:textSize="16sp"
          android:textColor="@color/title_black_color"
          android:visibility="gone"
          />
    </LinearLayout>
  </FrameLayout>
</FrameLayout>