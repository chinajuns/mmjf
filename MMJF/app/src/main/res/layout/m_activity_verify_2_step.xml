<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_bg_color"
    >
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/grey_bg_color"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:layout_marginTop="10dp"
          android:background="@color/bg_white_color"
          >
        <!--1部分-->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:orientation="vertical"
              >
              <TextView
                  android:id="@+id/tvTitle1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="手持身份正面证照（文字清晰，四角齐全）"
                  android:textColor="@color/title_black_color"
                  android:layout_marginTop="10dp"
                  android:textSize="13sp"
                  />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                >
              <ImageView
                  android:id="@+id/imgUpCard"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_card_up"
                  android:scaleType="fitCenter"
                  />
            </android.support.v7.widget.CardView>
          </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <!--2部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/tvTitle2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="手持身份反面证照（文字清晰，四角齐全）"
              android:textColor="@color/title_black_color"
              android:layout_marginTop="10dp"
              android:textSize="13sp"
              />
          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="25dp"
              android:layout_marginRight="25dp"
              app:cardCornerRadius="5dp"
              >
            <ImageView
                android:id="@+id/imgDownCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_card_down"
                android:scaleType="fitCenter"
                />
          </android.support.v7.widget.CardView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <!--3部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1、请上传本人手持身份证正面头部和上半身照片。"
                    android:textSize="10sp"
                    android:textColor="@color/text_3_4d_color"
                    />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2、必须看清证件信息，且证件信息不能被遮罩，持证人五官清晰可见。"
                  android:textSize="10sp"
                  android:textColor="@color/text_3_4d_color"
                  android:layout_marginTop="5dp"
                  />
              <TextView
                  android:id="@+id/tvDesc3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="3、仅支持.jpg.bmp.png.gif的图片格式，建议图片大小不超过3M。"
                  android:textSize="10sp"
                  android:textColor="@color/text_3_4d_color"
                  android:layout_marginTop="5dp"
                  />
              <TextView
                  android:id="@+id/tvDesc4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="4、您提供的照片信息毛毛金服将予以保护，不会用于其他用途。"
                  android:textSize="10sp"
                  android:textColor="@color/text_3_4d_color"
                  android:layout_marginTop="5dp"
                  />
            </LinearLayout>
        </LinearLayout>
      </LinearLayout>
      <Button
          android:id="@+id/btnNext"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_gravity="bottom"
          android:background="@drawable/btn_yellow_bg_selector_5dp"
          android:text="@string/next_step"
          android:textColor="@color/btn_yellow_textcolor_selector"
          android:enabled="false"
          />
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#aa666666"
          android:visibility="gone"
          android:clickable="true"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center_horizontal"
              >
              <ImageView
                  android:id="@+id/imgAuditState"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_audit_fail"
                  />
            <TextView
                android:id="@+id/tvAuditDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名认证审核中"
                android:textColor="@color/bg_white_color"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                />
            <Button
                android:id="@+id/btnAuditAgain"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_yellow_enabled_shape_5dp"
                android:text="重新审核"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@color/title_black_color"
                android:visibility="gone"
                />
          </LinearLayout>
      </FrameLayout>
  </FrameLayout>
</LinearLayout>