<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="175dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_layer"
    android:layout_marginTop="10dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="10dp"
      android:paddingLeft="10dp"
      android:paddingBottom="10dp">
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#e1e1e1"
        android:layout_marginRight="10dp"
        >
      <ImageView
          android:id="@+id/imgCard"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          />
      <TextView
          android:id="@+id/tvLoanType"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="20dp"
          android:text="专业房产抵押贷款"
          android:background="#47000000"
          android:layout_gravity="bottom"
          android:textSize="11sp"
          android:textColor="#ffffff"
          android:gravity="center"
          />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white_color"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="10dp"
          >
        <TextView
            android:id="@+id/tvName"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李易峰"
            android:textColor="#1a1a1a"
            android:textSize="13sp"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/ivVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_verify"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvName"
            />
          <CheckBox
              android:id="@+id/check_box"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="10dp"
              android:button="@drawable/chx_circle_dot_selector"
              android:checked="true"
              android:visibility="gone"
              android:clickable="false"
              android:focusableInTouchMode="false"
              android:focusable="false"
              />
      </RelativeLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="5dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高为你贷款:"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            />
        <TextView
            android:id="@+id/tvMaxLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            android:layout_marginLeft="5dp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="5dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已成功放款:"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            />
        <TextView
            android:id="@+id/tvLoanNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            android:layout_marginLeft="5dp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="5dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近30天成功放款:"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            />
        <TextView
            android:id="@+id/tv30Days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            android:layout_marginLeft="5dp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="5dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平均放款时间:"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            />
        <TextView
            android:id="@+id/tvLoanDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            android:layout_marginLeft="5dp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginBottom="10dp"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合评分:"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            />
        <!--<android.support.v7.widget.AppCompatRatingBar-->
            <!--android:id="@+id/ratingBar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@android:style/Widget.DeviceDefault.RatingBar.Small"-->
            <!--android:numStars="5"-->
            <!--android:rating="4.5"-->
            <!--/>-->
        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:srb_drawableFilled="@drawable/star_sel"
            app:srb_drawableEmpty="@drawable/star_unsel"
            app:srb_stepSize="0.5"
            app:srb_rating="0"
            app:srb_numStars="5"
            app:srb_starPadding="1dp"
            app:srb_isIndicator="true"
            app:srb_clickable="true"
            app:srb_clearRatingEnabled="true"
            android:padding="0dp"
            >

        </com.willy.ratingbar.ScaleRatingBar>
        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffd105"
            android:textSize="11sp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/tvFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="达人"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            android:visibility="invisible"
            android:background="@color/grey_bg_color"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/tvHot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门"
            android:textSize="11sp"
            android:textColor="#b3b3b3"
            android:layout_marginLeft="22dp"
            android:visibility="invisible"
            android:background="@color/grey_bg_color"
            android:padding="2dp"
            />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
