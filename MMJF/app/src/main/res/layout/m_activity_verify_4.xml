<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/grey_bg_color"
          android:orientation="vertical"
          android:paddingBottom="30dp"
          >
        <!--基本信息-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="个人信息:"
            android:textSize="13sp"
            android:textColor="@color/text_3_b3_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white_color"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免冠照片"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/touxiang"
                android:layout_centerVertical="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李易峰"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="510711189810111456"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地址"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四川省、成都市、金牛区"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构类型"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvCompanyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款公司"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构名称"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成都御顺投资担保有限公司"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/line_color"
              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属部门"
                android:textColor="@color/title_black_color"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tvBelongDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权证"
                android:textColor="@color/text_3_4d_color"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                />
          </RelativeLayout>
        </LinearLayout>
        <!--身份证-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="身份证:"
            android:textSize="13sp"
            android:textColor="@color/text_3_b3_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white_color"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              android:orientation="horizontal"
              >
            <ImageView
                android:id="@+id/ivFontCard"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/banner1"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/ivBackCard"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/banner2"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                />
          </LinearLayout>
        </LinearLayout>
        <!--资质证明:-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="资质证明:"
            android:textSize="13sp"
            android:textColor="@color/text_3_b3_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white_color"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              android:orientation="horizontal"
              >
            <ImageView
                android:id="@+id/ivGongpai"
                android:layout_width="66dp"
                android:layout_height="80dp"
                android:src="@drawable/banner1"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/ivMingpian"
                android:layout_width="66dp"
                android:layout_height="80dp"
                android:src="@drawable/banner1"
                android:scaleType="centerCrop"
                android:layout_marginLeft="15dp"
                />
            <ImageView
                android:id="@+id/ivHetong"
                android:layout_width="66dp"
                android:layout_height="80dp"
                android:src="@drawable/banner1"
                android:scaleType="centerCrop"
                android:layout_marginLeft="15dp"
                />
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="66dp"
                android:layout_height="80dp"
                android:src="@drawable/banner1"
                android:scaleType="centerCrop"
                android:layout_marginLeft="15dp"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </ScrollView>
  </FrameLayout>
  <FrameLayout
      android:id="@+id/layoutMask"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/mask_color"
      android:visibility="gone"
      android:clickable="true"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        >
      <ImageView
          android:id="@+id/imgAuditState"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_audit_fail"
          />
      <TextView
          android:id="@+id/tvAuditDesc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/bg_white_color"
          android:layout_marginTop="20dp"
          android:textSize="16sp"
          />
      <Button
          android:id="@+id/btnAuditAgain"
          android:layout_width="300dp"
          android:layout_height="40dp"
          android:background="@drawable/btn_yellow_enabled_shape_5dp"
          android:layout_marginTop="20dp"
          android:textSize="16sp"
          android:textColor="@color/title_black_color"
          android:visibility="gone"
          android:text="重新认证"
          />
    </LinearLayout>
  </FrameLayout>
</FrameLayout>