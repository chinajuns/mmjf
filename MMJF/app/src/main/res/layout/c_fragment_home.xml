<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <!--内容布局-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/bg_white_color"
      >
    <!--title-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/bg_white_color"
        >
      <CheckBox
          android:id="@+id/chxFilter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:button="@drawable/c_chx_home_filter_selector"
          android:checked="true"
          android:padding="15dp"
          android:layout_marginLeft="15dp"
          />
      <TextView
          android:id="@+id/txtCity"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="成都"
          android:layout_gravity="center"
          android:drawableRight="@drawable/c_city_sel_down_arrow"
          android:drawableLeft="@drawable/c_img_locate"
          android:drawablePadding="5dp"
          />
      <ImageButton
          android:id="@+id/btnFilter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@null"
          android:src="@drawable/c_btn_filter"
          android:layout_gravity="right|center_vertical"
          android:padding="15dp"
          />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        >
      <com.baidu.mapapi.map.MapView
          android:id="@+id/mapView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:clickable="true"
          />
      <!--filter-->
      <android.support.design.widget.TabLayout
          android:id="@+id/tabFilter"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:tabSelectedTextColor="@color/btn_enabled_color"
          app:tabTextColor="@color/btn_disabled_color"
          app:tabIndicatorColor="@color/btn_enabled_color"
          app:tabIndicatorHeight="1dp"
          app:tabMode="scrollable"
          android:background="@color/bg_white_color"
          />
      <android.support.v4.view.ViewPager
          android:id="@+id/viewPager"
          android:layout_width="match_parent"
          android:layout_height="175dp"
          android:clipChildren="false"
          android:layout_gravity="bottom"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:background="@android:color/transparent"
          />
    </FrameLayout>
  </LinearLayout>
  <!--侧滑布局-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/bg_white_color"
      android:layout_gravity = "end"
      android:orientation="vertical"
      >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="15dp"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/bg_white_color"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                />
          <Button
              android:id="@+id/btnClearFilter"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:text="清空条件"
              android:textSize="16sp"
              android:textColor="@color/btn_enabled_color"
              />
        </LinearLayout>
      <Button
          android:id="@+id/btnComplteFilter"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:background="@color/theme_color"
          android:text="完成"
          android:textSize="16sp"
          android:textColor="@color/btn_enabled_color"
          />
    </LinearLayout>
  </LinearLayout>
</android.support.v4.widget.DrawerLayout>