<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        >
        <com.youth.banner.Banner
            android:id="@+id/viewBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </com.youth.banner.Banner>
      <TextView
          android:id="@+id/tvCity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="成都"
          android:paddingTop="20dp"
          android:paddingLeft="15dp"
          android:drawableLeft="@drawable/m_ic_locate"
          android:drawablePadding="5dp"
          android:textColor="@color/bg_white_color"
          />
      <FrameLayout
          android:id="@+id/layoutMsg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginTop="20dp"
          android:layout_marginRight="15dp"
          >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/m_ic_msg"
            />
        <ImageView
            android:id="@+id/ivMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_red_shape"
            android:layout_gravity="right"
            />
      </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivDot1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/dot_indicator_unsel"
                />
          <ImageView
              android:id="@+id/ivDot2"
              android:layout_width="5dp"
              android:layout_height="5dp"
              android:src="@drawable/dot_indicator_unsel"
              android:layout_marginLeft="10dp"
              />
          <ImageView
              android:id="@+id/ivDot3"
              android:layout_width="5dp"
              android:layout_height="5dp"
              android:src="@drawable/dot_indicator_unsel"
              android:layout_marginLeft="10dp"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_layer"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:drawableTop="@drawable/m_ic_score"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/title_black_color"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tvRubOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rub_order"
                android:drawableTop="@drawable/m_ic_rub_order"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/title_black_color"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tvWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet"
                android:drawableTop="@drawable/m_ic_wallet"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/title_black_color"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tvThrowOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/throw_order"
                android:drawableTop="@drawable/m_ic_throw_order"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/title_black_color"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="20dp"
              >
            <TextView
                android:id="@+id/tvNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news"
                android:drawableTop="@drawable/m_ic_news"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/title_black_color"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tvSmallCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/small_name_card"
                android:drawableTop="@drawable/m_ic_small_name_card"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/title_black_color"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tvCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator"
                android:drawableTop="@drawable/m_ic_caculator"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/title_black_color"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/throw_order"
                android:gravity="center"
                />
          </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/layoutRubOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/m_home_rub_bg"
            android:layout_marginTop="10dp"
            >
          <TextView
              android:id="@+id/tvRubNum"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#ffffff"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="85dp"
              />
          <TextView
              android:layout_width="100dp"
              android:layout_height="40dp"
              android:background="@drawable/btn_white_shape_20dp"
              android:text="立即抢单"
              android:textColor="#ff8f00"
              android:gravity="center"
              android:layout_marginTop="115dp"
              android:layout_gravity="center_horizontal"
              />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>