<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_bg_color"
    android:paddingTop="10dp"
    >
    <RelativeLayout
        android:id="@+id/layoutFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/bg_white_color"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="13sp"
            android:textColor="@color/title_black_color"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bg_white_color"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推送通知"
        android:textSize="13sp"
        android:textColor="@color/title_black_color"
        android:layout_centerVertical="true"
        />
    <com.ysjr.mmjf.widget.SwitchButton
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:sb_show_indicator="false"
        app:sb_checked_color="@color/theme_color"
        app:sb_uncheck_color="@color/bg_3_e6_color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/layoutModifyPsw"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:paddingBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/bg_white_color"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="13sp"
        android:textColor="@color/title_black_color"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"/>
  <RelativeLayout
      android:id="@+id/layoutAboutUs"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:paddingBottom="20dp"
      android:background="@color/bg_white_color"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:textSize="13sp"
        android:textColor="@color/title_black_color"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/layoutExitLogin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:paddingBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/bg_white_color"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textSize="13sp"
        android:textColor="@color/title_black_color"
        />
  </RelativeLayout>
</LinearLayout>