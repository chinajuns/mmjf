<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    tools:context="com.ysjr.mmjf.module.login_module.login.LoginActivity"
    >
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        >
      <ImageView
          android:id="@+id/imgBack"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/btn_back"
          android:background="@android:color/transparent"
          android:padding="10dp"
          />
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/bg_app_name"
          android:layout_marginTop="11dp"
          android:layout_gravity="center_horizontal"
          android:background="@android:color/transparent"
          />
      <!--登录、注册-->
      <FrameLayout
          android:layout_width="310dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="40dp"
          >
        <!--登录-->
        <FrameLayout
            android:id="@+id/layoutLogin"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            >
          <LinearLayout
              android:orientation="vertical"
              android:background="@drawable/bg_white_layer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="40dp"
              android:paddingLeft="35dp"
              android:paddingRight="35dp"
              >
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/textLoginPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="@string/input_phone"
                android:minHeight="@dimen/min_edit_height"
                app:met_baseColor="@color/btn_enabled_color"
                app:met_primaryColor="@color/line_color"
                app:met_textColorHint="@color/hint_color"
                app:met_clearButton="true"
                app:met_underlineColor="@color/line_color"
                app:met_errorColor="@color/error_color"
                android:inputType="number"
                android:maxLength="11"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/textPsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_psw"
                android:minHeight="@dimen/min_edit_height"
                app:met_baseColor="@color/btn_enabled_color"
                app:met_primaryColor="@color/line_color"
                app:met_textColorHint="@color/hint_color"
                app:met_clearButton="true"
                app:met_underlineColor="@color/line_color"
                app:met_errorColor="@color/error_color"
                android:maxLength="16"
                android:inputType="textPassword"
                />
            <Button
                android:id="@+id/btnForgetPsw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="忘记密码?"
                android:textSize="12sp"
                android:textColor="#ffd105"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_selector"
                android:text="@string/login"
                android:textColor="@color/btn_textcolor_selector"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/min_edit_height"
                android:enabled="false"
                />
            <Button
                android:id="@+id/btnSwitchRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_register"
                android:textSize="12sp"
                android:textColor="@color/btn_enabled_color"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                />
          </LinearLayout>
          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/imgAvatar"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/img_default_avatar"
              android:layout_gravity="center|top"
              android:elevation="5dp"
              />
        </FrameLayout>
      </FrameLayout>
    </LinearLayout>
    <!--底部-->
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >
      <LinearLayout
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginBottom="10dp"
          >
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/bg_white_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MORE"
            android:textSize="12sp"
            android:textColor="@color/bg_white_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/bg_white_color"
            />
      </LinearLayout>
      <FrameLayout
          android:background="@drawable/bg_login_bottom"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            >
          <ImageView
              android:id="@+id/imgSms"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/btn_sim_login"
              />
          <ImageView
              android:id="@+id/imgWeixin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/btn_weixin_login"
              android:layout_marginLeft="99dp"
              />
        </LinearLayout>
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
