<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/m_bg_wallet"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white_color"
            android:text="5000"
            android:textSize="50sp"
            android:layout_marginTop="15dp"
            />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/bg_white_color"
          android:text="账户余额（元）"
          android:textSize="11sp"
          />
    </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="130dp"
      android:background="@drawable/bg_white_layer"
      android:layout_marginLeft="38dp"
      android:layout_marginRight="38dp"
      android:orientation="horizontal"
      >
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center_horizontal"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="200"
                  android:textSize="20sp"
                  android:textColor="@color/title_black_color"
                  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总收入（元） "
                android:textSize="11sp"
                android:textColor="@color/text_3_cc_color"
                />
          </LinearLayout>
      </FrameLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/line_color"
        android:layout_gravity="center_vertical"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textSize="20sp"
            android:textColor="@color/title_black_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已结算（元）"
            android:textSize="11sp"
            android:textColor="@color/text_3_cc_color"
            />
      </LinearLayout>
    </FrameLayout>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >
        <Button
            android:id="@+id/btnWantMoney"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/bg_white_color"
            android:textSize="16sp"
            android:text="@string/i_want_money"
            android:textColor="@color/title_black_color"
            />
      <Button
          android:id="@+id/btnCostMoney"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:background="@color/theme_color"
          android:textSize="16sp"
          android:text="@string/save_money_current"
          android:textColor="@color/title_black_color"
          />
    </LinearLayout>
</FrameLayout>