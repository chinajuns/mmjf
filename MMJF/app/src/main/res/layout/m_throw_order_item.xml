<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_white_layer">
  <!--1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        >
      <FrameLayout
          android:id="@+id/layoutLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_product_label"
          >
          <TextView
              android:id="@+id/tvPrice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/bg_white_color"
              android:text="10000积分"
              android:textSize="11sp"
              android:layout_gravity="center"
              />
      </FrameLayout>
        <TextView
            android:id="@+id/tvCusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李先生"
            android:textColor="@color/title_black_color"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/layoutLabel"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_3_cc_color"
            android:layout_toRightOf="@id/tvCusName"
            android:layout_alignBottom="@id/tvCusName"
            android:text="2017-11-08"
            android:layout_marginLeft="10dp"
            />
      <TextView
          android:id="@+id/tvState"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:textSize="11sp"
          />
    </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      />
  <!--2-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="25dp"
      android:paddingBottom="25dp"
      >
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >
          <TextView
              android:id="@+id/tvLoanNumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1万元"
              android:textSize="13sp"
              android:textColor="@color/title_black_color"
              android:layout_gravity="center"
              />
      </FrameLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:background="@color/line_color"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <TextView
          android:id="@+id/tvLoanType"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="装修贷款"
          android:textSize="13sp"
          android:textColor="@color/title_black_color"
          android:layout_gravity="center"
          />
    </FrameLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:background="@color/line_color"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <TextView
          android:id="@+id/tvLoanLimit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="6个月"
          android:textSize="13sp"
          android:textColor="@color/title_black_color"
          android:layout_gravity="center"
          />
    </FrameLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
      <TextView
          android:id="@+id/tvAge"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
    <TextView
        android:id="@+id/tvCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          android:text="手机："
          />
      <TextView
          android:id="@+id/tvMobile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_33abff_color"
          android:textSize="13sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tvInfo0key"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
      <TextView
          android:id="@+id/tvInfo0Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tvInfo1key"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
      <TextView
          android:id="@+id/tvInfo1Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tvInfo2key"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
      <TextView
          android:id="@+id/tvInfo2Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tvInfo3key"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
      <TextView
          android:id="@+id/tvInfo3Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tvInfo4key"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
      <TextView
          android:id="@+id/tvInfo4Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
    </LinearLayout>
  </LinearLayout>
  <Button
      android:id="@+id/btnThrowOrderAgain"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/theme_color"
      android:text="@string/throw_order_again"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="15dp"
      />
</LinearLayout>