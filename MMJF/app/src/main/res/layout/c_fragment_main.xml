<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/text_3e6_color"
      />
  <LinearLayout
      android:id="@+id/layoutBottom"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:background="@color/bg_white_color"
      >
    <FrameLayout
        android:id="@+id/layoutHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c_home_selected_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="@color/title_black_color"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />
      </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layoutLoan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/ivLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c_loan_unsel_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan"
            android:textColor="@color/title_black_color"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />
      </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layoutNews"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c_ic_news_unsel"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news"
            android:textColor="@color/title_black_color"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />
      </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layoutMsg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
          <ImageView
              android:id="@+id/ivMsg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/c_msg_unsel"
              />
          <ImageView
              android:id="@+id/ivMsgState"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/dot_red_shape"
              android:layout_gravity="right"
              android:visibility="gone"
              />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg"
            android:textColor="@color/title_black_color"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />
      </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layoutMe"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/ivMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/c_me_unsel_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me"
            android:textColor="@color/title_black_color"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />
      </LinearLayout>
    </FrameLayout>
  </LinearLayout>
</LinearLayout>