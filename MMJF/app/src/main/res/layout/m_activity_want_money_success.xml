<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white_color"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/want_money_success"
          android:textColor="@color/title_black_color"
          android:textSize="13sp"
          android:drawableTop="@drawable/c_ic_apply_success"
          android:drawablePadding="10dp"
          android:gravity="center"
          android:layout_marginTop="30dp"
          />
      <TextView
          android:id="@+id/tvCount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="11sp"
          android:text="提现时间2017-11-16 10:00"
          android:textColor="@color/text_3_b3_color"
          android:layout_marginTop="10dp"
          />
      <Button
          android:id="@+id/btnComplete"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="60dp"
          android:layout_marginBottom="30dp"
          android:background="@color/theme_color"
          android:text="@string/complete"
          android:textSize="16sp"
          android:textColor="@color/title_black_color"
          />
    </LinearLayout>
</FrameLayout>