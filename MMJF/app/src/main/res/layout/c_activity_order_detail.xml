<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_bg_color"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          >
        <TextView
            android:id="@+id/tvLoanAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号：0124560123456"
            android:textSize="11sp"
            android:textColor="@color/text_3_b3_color"
            />
        <TextView
            android:id="@+id/tvLoanTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间：2017-11-03   17:50：30"
            android:textSize="11sp"
            android:textColor="@color/text_3_b3_color"
            android:layout_alignParentRight="true"
            />
      </RelativeLayout>
      <!--manager-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="175dp"
          android:orientation="horizontal"
          android:paddingTop="10dp"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp">
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#e1e1e1"
            >
          <ImageView
              android:id="@+id/imgCard"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/touxiang"
              android:scaleType="centerCrop"
              />
          <TextView
              android:id="@+id/tvLoanType"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="20dp"
              android:background="#47000000"
              android:layout_gravity="bottom"
              android:textSize="11sp"
              android:textColor="#ffffff"
              android:gravity="center"
              />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white_color"
            android:paddingLeft="15dp"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="10dp"
              >
            <TextView
                android:id="@+id/tvName"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李易峰"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:id="@+id/ivVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_verify"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvName"
                />
            <TextView
                android:id="@+id/tvLoanState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:textSize="11sp"
                />
          </RelativeLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="5dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高为你贷款:"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                />
            <TextView
                android:id="@+id/tvMaxLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                android:layout_marginLeft="5dp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="5dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已成功放款:"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                />
            <TextView
                android:id="@+id/tvLoanNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                android:layout_marginLeft="5dp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="5dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近30天成功放款:"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                />
            <TextView
                android:id="@+id/tv30Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                android:layout_marginLeft="5dp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="5dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均放款时间:"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                />
            <TextView
                android:id="@+id/tvLoanDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                android:layout_marginLeft="5dp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_marginBottom="10dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合评分:"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                />
            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_drawableFilled="@drawable/star_sel"
                app:srb_drawableEmpty="@drawable/star_unsel"
                app:srb_stepSize="0.5"
                app:srb_rating="0"
                app:srb_numStars="5"
                app:srb_starPadding="1dp"
                app:srb_isIndicator="true"
                app:srb_clickable="true"
                app:srb_clearRatingEnabled="true"
                >

            </com.willy.ratingbar.ScaleRatingBar>
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffd105"
                android:textSize="11sp"
                android:text="4.5"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
            <TextView
                android:id="@+id/tvFocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="达人"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tvHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门"
                android:textSize="11sp"
                android:textColor="#b3b3b3"
                android:layout_marginLeft="22dp"
                android:visibility="invisible"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <!--order-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/bg_white_color"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/imgApply"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_order_apply_default"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请贷款"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:textColor="@color/text_3_4d_color"
            />
      </LinearLayout>
      <View
          android:id="@+id/viewLine1"
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/theme_color"
          android:layout_weight="1"
          android:layout_marginTop="15dp"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/imgInfoCommit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_order_info_commit_default"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料提交"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:textColor="@color/text_3_4d_color"
            />
      </LinearLayout>
      <View
          android:id="@+id/viewLine2"
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/theme_color"
          android:layout_weight="1"
          android:layout_marginTop="15dp"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/imgAuditInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_order_audit_info_default"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批资料"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:textColor="@color/text_3_4d_color"
            />
      </LinearLayout>
      <View
          android:id="@+id/viewLine3"
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/theme_color"
          android:layout_weight="1"
          android:layout_marginTop="15dp"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          >
        <ImageView
            android:id="@+id/imgAuditLoan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_order_audit_loan_default"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批放款"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:textColor="@color/text_3_4d_color"
            />
      </LinearLayout>
    </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/bg_white_color"
      android:paddingTop="20dp"
      >

  </android.support.v7.widget.RecyclerView>
</LinearLayout>