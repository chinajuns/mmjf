<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_white_layer">
  <!--1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:id="@+id/tvCusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李先生"
            android:textColor="@color/title_black_color"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tvCreateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_3_cc_color"
            android:layout_toRightOf="@id/tvCusName"
            android:layout_alignBottom="@id/tvCusName"
            android:text="2017-11-08"
            android:layout_marginLeft="10dp"
            />
      <ImageView
          android:id="@+id/ivVip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/m_ic_vip"
          android:layout_alignParentRight="true"
          />
    </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      />
  <!--2-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="25dp"
      android:paddingBottom="25dp"
      >
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >
          <TextView
              android:id="@+id/tvApplyNumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1万元"
              android:textSize="15sp"
              android:textColor="@color/title_black_color"
              android:layout_gravity="center"
              />
      </FrameLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:background="@color/line_color"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <TextView
          android:id="@+id/tvLoanType"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="装修贷款"
          android:textSize="15sp"
          android:textColor="@color/title_black_color"
          android:layout_gravity="center"
          />
    </FrameLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:background="@color/line_color"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <TextView
          android:id="@+id/tvPeriod"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="6个月"
          android:textSize="15sp"
          android:textColor="@color/title_black_color"
          android:layout_gravity="center"
          />
    </FrameLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/line_color"
      android:layout_marginRight="15dp"
      android:layout_marginLeft="15dp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
      <TextView
          android:id="@+id/tvInfo1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          />
    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
    <TextView
        android:id="@+id/tvInfo3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/tvInfo4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
    <TextView
        android:id="@+id/tvInfo5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/tvInfo6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginTop="10dp"
      >
    <TextView
        android:id="@+id/tvInfo7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/tvInfo8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_3_4d_color"
        android:textSize="13sp"
        />
  </LinearLayout>
  <Button
      android:id="@+id/btnRub"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/btn_rub_6dp_shape"
      android:textColor="@color/title_black_color"
      android:textSize="16sp"
      />
</LinearLayout>