<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="创建信贷店铺，扩大获客渠道"
      android:textSize="18sp"
      android:textColor="@color/title_black_color"
      android:layout_marginTop="45dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="超过60%的信贷经理都创建自己的店铺"
      android:textSize="11sp"
      android:textColor="@color/title_black_color"
      android:layout_marginTop="15dp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="80dp"
      android:background="@color/bg_white_color"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      >
    <ImageView
        android:id="@+id/ivCreateStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/m_bg_create_store"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
      <ImageButton
          android:id="@+id/ivClose"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/m_ic_close_cross"
          android:layout_gravity="center"
          android:background="@null"
          />
    </FrameLayout>
  </LinearLayout>
</LinearLayout>