<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_color"
    android:padding="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@color/bg_white_color"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-200"
            android:textColor="@color/text_ff3333_color"
            android:textSize="25sp"
            />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="11sp"
          android:textColor="@color/text_3_b3_color"
          android:text="订单金额（元）"
          android:layout_marginTop="10dp"
          />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/m_bg_arc_line"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/bg_white_color"
      android:paddingTop="30dp"
      android:paddingBottom="60dp"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="订单类型"
           android:textColor="@color/title_black_color"
           android:textSize="13sp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="提现"
           android:textColor="@color/text_3_4d_color"
           android:textSize="13sp"
           android:layout_alignParentRight="true"
           />
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="订单时间"
          android:textColor="@color/title_black_color"
          android:textSize="13sp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2017-08-07   07:32"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          android:layout_alignParentRight="true"
          />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="交易订单号"
          android:textColor="@color/title_black_color"
          android:textSize="13sp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="201709090732"
          android:textColor="@color/text_3_4d_color"
          android:textSize="13sp"
          android:layout_alignParentRight="true"
          />
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>