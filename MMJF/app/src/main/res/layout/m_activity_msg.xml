<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_white_color"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/theme_color"
        >
      <ImageView
          android:id="@+id/ivBack"
          android:layout_width="?android:attr/actionBarSize"
          android:layout_height="match_parent"
          android:src="@drawable/btn_black_back"
          android:scaleType="center"
          />
      <android.support.design.widget.TabLayout
          android:id="@+id/tabLayout"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          app:tabTextColor="@color/title_black_color"
          app:tabSelectedTextColor="@color/title_black_color"
          app:tabIndicatorColor="@color/title_black_color"
          app:tabIndicatorHeight="1dp"
          android:layout_gravity="center"
          >

      </android.support.design.widget.TabLayout>
    </FrameLayout>
  <android.support.v4.view.ViewPager
      android:id="@+id/viewPager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

  </android.support.v4.view.ViewPager>
</LinearLayout>